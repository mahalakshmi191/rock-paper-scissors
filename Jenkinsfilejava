pipeline {
    agent any

    environment {
        TOMCAT_URL = "http://localhost:8081/manager/text"  // change if needed
        TOMCAT_APP_NAME = "roshambo"
    }

    stages {

        stage('Checkout') {
            steps {
                git credentialsId: 'git-creds',
                    url: 'https://github.com/mahalakshmi191/rock-paper-scissors.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    def warFile = "target/${TOMCAT_APP_NAME}.war"

                    withCredentials([usernamePassword(credentialsId: 'tomcat-admin-cred', 
                                                     usernameVariable: 'TOMCAT_USER', 
                                                     passwordVariable: 'TOMCAT_PASS')]) {
                        sh """
                            curl --upload-file ${warFile} \
                            -u $TOMCAT_USER:$TOMCAT_PASS \
                            "${TOMCAT_URL}/deploy?path=/${TOMCAT_APP_NAME}&update=true"
                        """
                    }
                }
            }
        }
    }
}
